<%= link_to "< Back home", cocktails_path %>

<div class='cocktail-card-large'>
  <h2><%= @cocktail.name %></h2>
</div>

<div class='ingredients-list'>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> of <%= dose.ingredient.name %>
        <%= link_to "remove", cocktail_dose_path(cocktail_id: @cocktail.id, id: dose.id), method: :delete %>
      </li>
    <% end %>

    <%= link_to new_cocktail_dose_path(@cocktail) do %>
      <li>Add something</li>
    <% end %>
  </ul>
</div>
